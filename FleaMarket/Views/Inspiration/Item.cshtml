@model InspirationItem

<a asp-action="" asp-controller="Inspiration"><i class="fas fa-arrow-left"></i> Go Back</a>
<div class="inspiration-view-item mt-2 @(Model.Title == null && Model.Description == null ? "justify-content-center" : "")">
    <div class="inspiration-view-image">
        <img src="@Model.Image.Url" />
    </div>
    @if (Model.Title != null || Model.Description != null)
    {
        <div class="inspiration-view-info">
            <div class="inspiration-view-title">
                <h3>@Model.Title</h3>
            </div>
            <div class="inspiration-view-text">
                @Model.Description
            </div>
        </div>
    }
</div>
