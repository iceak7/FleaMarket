@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul>
@if (SignInManager.IsSignedIn(User))
{
    <li class="login-item">
        <a id="manage"  asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Konto</a>
    </li>
        <li class="login-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit">Logga ut</button>
        </form>
    </li>
}
else
{
        <li class="login-item">
        <a id="register" asp-area="Identity" asp-page="/Account/Register">Registrera konto</a>
    </li>
        <li class="login-item">
        <a id="login" asp-area="Identity" asp-page="/Account/Login">Logga in</a>
    </li>
}
</ul>
