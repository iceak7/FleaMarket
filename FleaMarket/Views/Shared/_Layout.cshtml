<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Rosies Prylar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FleaMarket.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/choices.js/choices.css" />
    <link rel="stylesheet" href="~/lib/splidejs/css/splide.min.css" />
    <link rel="icon" type="image/x-icon" href="/fonts/favicon-32x32.png" />
    <script src="https://kit.fontawesome.com/8b0424c581.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand titleFont"  asp-controller="Home" asp-action="Index">Rosies Prylar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Hem</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Market" asp-action="Index">Föremål</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Inspiration" asp-action="Index">Inspiration</a>
                        </li>
                    </ul>

                    @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown admin-menu">
                                @await Html.PartialAsync("PartialViews/Menus/_AdminMenu")
                            </li>
                        </ul>
                    }


                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @await Html.PartialAsync("PartialViews/Messages/_SuccessMessage")
            @await Html.PartialAsync("PartialViews/Messages/_ErrorMessage")
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="footer-container">
            <p>&copy; 2023 - <span class="titleFont">Rosies Prylar</span></p>
            <span class="seperator"> - </span>
            <div class="footer-login">
                <partial name="_LoginPartial" />
            </div>
        </div>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/choices.js/choices.min.js"></script>
    <script src="~/lib/masonry/masonry.pkgd.min.js"></script>
    <script src="~/lib/splidejs/js/splide.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
